<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?android:attr/listPreferredItemHeightSmall"
    android:layout_margin="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="2dp"
        android:padding="4dp">

        <ImageView
            android:id="@+id/threadImageView"
            android:layout_width="@dimen/thread_thumbnail_dims"
            android:layout_height="@dimen/thread_thumbnail_dims"
            android:src="@drawable/information_internetworks_threads"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_margin="3dp"/>

        <TextView
            android:id="@+id/threadNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Devices"
            android:layout_toRightOf="@+id/threadImageView"
            android:layout_centerInParent="true"
            android:layout_margin="3dp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>