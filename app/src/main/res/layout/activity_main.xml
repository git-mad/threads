<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:fitsSystemWindows="true"
        tools:context="edu.gatech.gtorg.gitmad.threads.activity.MainActivity"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:elevation="20dp"
        android:padding="10dp">

        <TextView
            android:text="Choose a Thread"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textAppearance="@android:style/TextAppearance.Material.Headline"
            android:layout_marginLeft="20dp"
            android:textColor="?attr/actionMenuTextColor" />

    </FrameLayout>

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="edu.gatech.gtorg.gitmad.threads.fragment.ThreadsListFragment"
        class="edu.gatech.gtorg.gitmad.threads.fragment.ThreadsListFragment"
        android:id="@+id/threadsListFragment"
        tools:layout="@layout/fragment_threads_list" />

</LinearLayout>

